{
   "name": "merger",
   "version": "0.1.0-beta.0",
   "description": "compose dynamic html pages by mapping source data to an html template",
   "main": "built/ejs/src/index.js",
   "type": "module",
   "bin": {
      "merger-test": "bin/cli-merger.js"
   },
   "exports": {
      ".": {
         "types": "./built/types/src/index.d.ts",
         "require": "./built/cjs/src/index.js",
         "import": "./built/esm/src/index.js",
         "default": "./built/esm/src/index.js"
      }
   },
   "dependencies": {
      "ajv": "^8.12.0",
      "fs": "^0.0.1-security",
      "jsdom": "^22.1.0"
   },
   "scripts": {
      "test": "scripts/regression-tests.npm",
      "compile": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
      "build:clean": "rm -rf ./built",
      "build": "npm-run-all build:clean compile && node ./scripts/prepare-package-json"
   },
   "repository": {
      "type": "git",
      "url": "https://github.com/JeffCoster/merger"
   },
   "keywords": [
      "merger",
      "html",
      "dynamic",
      "compose",
      "render"
   ],
   "author": "Jeff Coster",
   "license": "MIT",
   "bugs": {
      "url": "https://github.com/JeffCoster/merger/issues"
   },
   "homepage": "https://github.com/JeffCoster/merger#readme",
   "browser": {
      "./built/esm/src/index.js": "./built/esm/src/index.js"
   },
   "eslintConfig": {
      "globals": {
         "Vue": true
      },
      "env": {
         "browser": true,
         "es6": true
      },
      "extends": [
         "eslint:recommended"
      ],
      "parserOptions": {
         "sourceType": "module"
      },
      "rules": {
         "no-console": 0,
         "indent": [
            "error",
            3
         ],
         "linebreak-style": [
            "error",
            "unix"
         ],
         "quotes": [
            "error",
            "double"
         ]
      }
   },
   "devDependencies": {
      "@commander-js/extra-typings": "github:commander-js/extra-typings",
      "@markedjs/html-differ": "^4.0.2",
      "@types/jsdom": "^21.1.3",
      "@types/markedjs__html-differ": "^3.0.3",
      "@types/node": "^20.6.0",
      "commander": "^11.1.0"
   }
}
